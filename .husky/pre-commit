#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run Prettier formatting
echo "🎨 Running Prettier formatting..."
npm run format
git add -A

# Check for unescaped entities
echo "🔍 Checking for unescaped entities..."
node scripts/check-unescaped-entities.js
if [ $? -ne 0 ]; then
  echo "❌ Pre-commit check failed: Unescaped entities found"
  exit 1
fi

# Run standard checks
echo "🔍 Running ESLint..."
npm run lint

echo "🔍 Running TypeScript check..."
npm run type-check

echo "✅ All pre-commit checks passed!"