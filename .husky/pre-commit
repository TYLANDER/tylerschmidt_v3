#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run Prettier formatting
echo "ğŸ¨ Running Prettier formatting..."
npm run format
git add -A

# Check for unescaped entities
echo "ğŸ” Checking for unescaped entities..."
node scripts/check-unescaped-entities.js
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit check failed: Unescaped entities found"
  exit 1
fi

# Run standard checks
echo "ğŸ” Running ESLint..."
npm run lint

echo "ğŸ” Running TypeScript check..."
npm run type-check

echo "âœ… All pre-commit checks passed!"